<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="EWP_WPF.Styles">
    <Style TargetType="TabControl" x:Key="TabCtrlStyle"></Style>
    <ControlTemplate x:Key="TabStyleTemp" TargetType="TabItem">
        <Grid>
            <Border CornerRadius="6" Background="{TemplateBinding Background}" Width="{TemplateBinding Width}">
                <TextBlock Text="{TemplateBinding Header}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </ControlTemplate>
    <Style TargetType="TabItem" x:Key="HomeTabStyle">
        <Setter Property="Template" Value="{StaticResource TabStyleTemp}"/>
        <Setter Property="Width" Value="96" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Height" Value="28" />
    </Style>
    <Style TargetType="TabItem" x:Key="TabStyle">
        <Setter Property="Template" Value="{StaticResource TabStyleTemp}"></Setter>
        <Setter Property="Height" Value="30"/>
    </Style>
    <Style TargetType="TabItem" x:Key="WorkTabStyle">
        
    </Style>
</ResourceDictionary>